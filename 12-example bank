class Bank_v1:
    bank_name = 'SBI'
    bank_ifsc = 'SBIN123'
    bank_roi = 6
    bank_branch = 'Hyderabad'

    def __init__(self, na, a, ac, cb):
        self.cname = na
        self.cage = a
        self.caccount = ac
        self.cbal = cb
     @staticmethod
     def get_int_value():
        integer=int(input("Enter amount: "))
        return integer

    @classmethod
    def modify_roi(cls):
        print(cls)
        newroi = cls.get_int_value()
        cls.bank_roi = newroi
        print('roi has been changed successfully')
